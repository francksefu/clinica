          <%= form.label :cpf, style: "display: block" %>
          <%= form.text_field :cpf, class: 'input' %>
        </div>

        <div>
          <%= form.label :email, style: "display: block" %>
          <%= form.email_field :email, class: 'input' %>
        </div>

        <div>
          <%= form.label :data_de_nascimento, style: "display: block" %>
          <%= form.date_field :data_de_nascimento, class: 'input' %>
        </div>


        <div>
          <%= form.submit class: "btn btn-primary mt-3 mb-3" %>
        </div>
      <% end %>
    </div>
    <div class="col-md-3"> </div>
  </div>
</div>
